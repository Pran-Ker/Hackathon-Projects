def input(WasteMangement):
    c.execute(f"INSERT INTO  waste VALUES ('{WasteMangement.waste_type}', '{WasteMangement.name}','{WasteMangement.address}')")
    conn.commit()



def delete_this(ch,del_name):
    if ch=="yes" or ch=="y":
        c.execute(f"DELETE FROM waste WHERE name='{del_name}'")


def view(view_name):
    c.execute(f"SELECT * FROM waste WHERE {view_name}")



