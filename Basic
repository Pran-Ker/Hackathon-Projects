import datetime
import sqlite3

conn=sqlite3.connect('waste.db')
c=conn.cursor()

class WasteMangement():

    def __intit__(self, waste_type , name , address):
        self.waste_type= waste_type
        self.name=name
        self.address=address


    def inputing(self):
        print()
        self.name=input("Enter your name:")
        self.waste_type=input("Enter your waste type:")
        self.address=input("Enter your address:")


     


'''c.execute("""CREATE TABLE waste (
